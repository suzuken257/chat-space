.main-list{data: {message: {id: message.id}}}
  .main_content
    .main_content__user_name
      = message.user.name
    .main_content__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_message
    - if message.content.present?
      = message.content
    %p
    -if message.image.present?
      = image_tag message.image.url, class: 'main_message__image'